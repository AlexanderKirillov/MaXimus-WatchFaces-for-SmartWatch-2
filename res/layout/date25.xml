            widgets:timeType="days_of_week" />
	 
	  <com.sonyericsson.extras.liveware.aef.widget.TimeView android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="fill_parent" widgets:textSize="18px"  android:textAllCaps="true" android:includeFontPadding="false" widgets:timeType="days_of_month" widgets:fontPath="Clockopia.otf" widgets:template=", dd" />
      <com.sonyericsson.extras.liveware.aef.widget.TimeView android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="fill_parent" widgets:textSize="18px"  android:textAllCaps="true" android:includeFontPadding="false" widgets:timeType="months" widgets:fontPath="Clockopia.otf" widgets:template=" MMMM" />
