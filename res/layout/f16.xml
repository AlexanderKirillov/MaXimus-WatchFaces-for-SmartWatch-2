<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widgets="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/smart_watch_2_text_color_white"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical" >

    <com.sonyericsson.extras.liveware.aef.widget.TimeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px"
        android:orientation="horizontal"
        widgets:gravity="center" >

        <com.sonyericsson.extras.liveware.aef.widget.TimeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            widgets:fontPath="SST-Condensed.ttf"
            widgets:textSize="65px"
            widgets:timeType="hours_digit2"/>
        
        <com.sonyericsson.extras.liveware.aef.widget.TimeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            widgets:fontPath="SST-Condensed.ttf"
            widgets:textSize="65px"
            widgets:timeType="hours_digit1" />

        <com.sonyericsson.extras.liveware.aef.widget.TimeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/black"
            widgets:fontPath="SST-Condensed.ttf"
            widgets:textSize="60px"
            widgets:timeType="constant" />

        <com.sonyericsson.extras.liveware.aef.widget.TimeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            widgets:fontPath="SST-Condensed.ttf"
            widgets:textSize="65px"
            widgets:timeType="minutes" />
    </com.sonyericsson.extras.liveware.aef.widget.TimeLayout>

    <com.sonyericsson.extras.liveware.aef.widget.TimeLayout
       android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-20px"
        widgets:gravity="center" >

        <com.sonyericsson.extras.liveware.aef.widget.TimeView
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:includeFontPadding="false"
            android:textColor="@android:color/black"
            widgets:template="EEEE, "
            widgets:fontPath="Clockopia.otf"
            widgets:textSize="15.0px"
            widgets:timeType="days_of_week" />

        <com.sonyericsson.extras.liveware.aef.widget.TimeView
          android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:includeFontPadding="false"
            
            android:textColor="@android:color/black"
            widgets:template="dd"
            widgets:fontPath="Clockopia.otf"
            widgets:textSize="15.0px"
            widgets:timeType="days_of_month" />

        <com.sonyericsson.extras.liveware.aef.widget.TimeView
             android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:includeFontPadding="false"
            android:textColor="@android:color/black"
            widgets:template=" MMM"
            widgets:fontPath="Clockopia.otf"
            widgets:textSize="15.0px"
            widgets:timeType="months" />

    </com.sonyericsson.extras.liveware.aef.widget.TimeLayout>

</LinearLayout>